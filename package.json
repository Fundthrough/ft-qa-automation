        "cypress-image-snapshot": "^4.0.1",
        "cypress-multi-reporters": "^1.6.1",
        "cypress-postgres": "^1.1.1",
        "cypress-postgresql": "^1.0.8",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.1",
        "mocha": "^10.0.0",
